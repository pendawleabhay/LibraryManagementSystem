    <property name='password' value='root' /> -->
    
    <property name='driverClassName' value='com.mysql.jdbc.Driver' />
    <property name='url' value='jdbc:mysql://aa1ub15gc6goc5z.cb9wahwhzvbg.us-west-2.rds.amazonaws.com:3306/lab2' />
